{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Reindex Request",
  "description": "Event emitted to request an index rebuild (P13).",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "scope": {
      "type": "string",
      "enum": [
        "fts",
        "vector",
        "embeddings",
        "semantic",
        "all"
      ]
    },
    "shard_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "resume_from_checkpoint": {
      "type": "boolean"
    },
    "requested_by": {
      "type": "string"
    }
  },
  "required": [
    "scope"
  ]
}