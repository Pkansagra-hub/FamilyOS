{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "context_switching.schema.json",
    "title": "Working Memory Context Switching Event",
    "description": "Event for context switching in working memory",
    "type": "object",
    "required": [
        "timestamp",
        "previous_context",
        "new_context",
        "switch_cost"
    ],
    "properties": {
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "previous_context": {
            "type": "string"
        },
        "new_context": {
            "type": "string"
        },
        "switch_cost": {
            "type": "number",
            "minimum": 0
        },
        "switch_type": {
            "type": "string",
            "enum": [
                "task_switch",
                "rule_switch",
                "attention_switch"
            ]
        }
    }
}
