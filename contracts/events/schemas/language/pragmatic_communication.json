{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "pragmatic_communication.event.json",
    "title": "Pragmatic Communication Event",
    "description": "Event schema for pragmatic communication processing based on right hemisphere language areas, frontal-parietal networks, and social brain regions",
    "type": "object",
    "required": [
        "event_id",
        "timestamp",
        "communicative_context",
        "pragmatic_processing",
        "social_cognitive_processing",
        "neural_pragmatic_networks"
    ],
    "properties": {
        "event_id": {
            "type": "string",
            "description": "Unique identifier for this pragmatic communication event"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "communicative_context": {
            "type": "object",
            "properties": {
                "social_context": {
                    "type": "object",
                    "properties": {
                        "participant_roles": {
                            "type": "object"
                        },
                        "social_relationships": {
                            "type": "object"
                        },
                        "power_dynamics": {
                            "type": "object"
                        },
                        "social_distance": {
                            "type": "number"
                        }
                    }
                },
                "cultural_context": {
                    "type": "object",
                    "properties": {
                        "cultural_norms": {
                            "type": "object"
                        },
                        "cultural_values": {
                            "type": "object"
                        },
                        "communication_styles": {
                            "type": "object"
                        },
                        "cultural_scripts": {
                            "type": "object"
                        }
                    }
                },
                "situational_context": {
                    "type": "object",
                    "properties": {
                        "physical_setting": {
                            "type": "object"
                        },
                        "temporal_setting": {
                            "type": "object"
                        },
                        "activity_context": {
                            "type": "object"
                        },
                        "formality_level": {
                            "type": "string"
                        }
                    }
                },
                "communicative_goals": {
                    "type": "object",
                    "properties": {
                        "primary_goals": {
                            "type": "array"
                        },
                        "secondary_goals": {
                            "type": "array"
                        },
                        "hidden_agendas": {
                            "type": "array"
                        },
                        "goal_conflicts": {
                            "type": "array"
                        }
                    }
                }
            }
        },
        "pragmatic_processing": {
            "type": "object",
            "properties": {
                "speech_act_processing": {
                    "type": "object",
                    "properties": {
                        "speech_act_recognition": {
                            "type": "object",
                            "properties": {
                                "direct_speech_acts": {
                                    "type": "object"
                                },
                                "indirect_speech_acts": {
                                    "type": "object"
                                },
                                "complex_speech_acts": {
                                    "type": "object"
                                }
                            }
                        },
                        "illocutionary_force_analysis": {
                            "type": "object",
                            "properties": {
                                "assertive_force": {
                                    "type": "object"
                                },
                                "directive_force": {
                                    "type": "object"
                                },
                                "commissive_force": {
                                    "type": "object"
                                },
                                "expressive_force": {
                                    "type": "object"
                                },
                                "declarative_force": {
                                    "type": "object"
                                }
                            }
                        },
                        "perlocutionary_effect_prediction": {
                            "type": "object",
                            "properties": {
                                "intended_effects": {
                                    "type": "object"
                                },
                                "actual_effects": {
                                    "type": "object"
                                },
                                "effect_monitoring": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "implicature_processing": {
                    "type": "object",
                    "properties": {
                        "conversational_implicature": {
                            "type": "object",
                            "properties": {
                                "gricean_maxim_violations": {
                                    "type": "object"
                                },
                                "implicature_derivation": {
                                    "type": "object"
                                },
                                "scalar_implicature_processing": {
                                    "type": "object"
                                }
                            }
                        },
                        "conventional_implicature": {
                            "type": "object",
                            "properties": {
                                "conventional_meaning_processing": {
                                    "type": "object"
                                },
                                "expressive_content_processing": {
                                    "type": "object"
                                }
                            }
                        },
                        "particularized_implicature": {
                            "type": "object",
                            "properties": {
                                "context_specific_inference": {
                                    "type": "object"
                                },
                                "relevance_based_inference": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "presupposition_processing": {
                    "type": "object",
                    "properties": {
                        "presupposition_identification": {
                            "type": "object",
                            "properties": {
                                "lexical_presuppositions": {
                                    "type": "object"
                                },
                                "structural_presuppositions": {
                                    "type": "object"
                                },
                                "factive_presuppositions": {
                                    "type": "object"
                                }
                            }
                        },
                        "presupposition_accommodation": {
                            "type": "object",
                            "properties": {
                                "accommodation_strategies": {
                                    "type": "object"
                                },
                                "context_updating": {
                                    "type": "object"
                                },
                                "common_ground_revision": {
                                    "type": "object"
                                }
                            }
                        },
                        "presupposition_projection": {
                            "type": "object",
                            "properties": {
                                "complex_sentence_presuppositions": {
                                    "type": "object"
                                },
                                "projection_filtering": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "reference_resolution": {
                    "type": "object",
                    "properties": {
                        "definite_reference_processing": {
                            "type": "object",
                            "properties": {
                                "familiarity_presupposition": {
                                    "type": "object"
                                },
                                "uniqueness_presupposition": {
                                    "type": "object"
                                },
                                "accessibility_assessment": {
                                    "type": "object"
                                }
                            }
                        },
                        "demonstrative_processing": {
                            "type": "object",
                            "properties": {
                                "spatial_deixis_processing": {
                                    "type": "object"
                                },
                                "temporal_deixis_processing": {
                                    "type": "object"
                                },
                                "discourse_deixis_processing": {
                                    "type": "object"
                                }
                            }
                        },
                        "pronoun_interpretation": {
                            "type": "object",
                            "properties": {
                                "antecedent_identification": {
                                    "type": "object"
                                },
                                "gender_agreement_processing": {
                                    "type": "object"
