                                "knowledge_perspective_shift": {
                                    "type": "object"
                                },
                                "belief_perspective_shift": {
                                    "type": "object"
                                },
                                "conceptual_perspective_shift": {
                                    "type": "object"
                                }
                            }
                        },
                        "affective_perspective_taking": {
                            "type": "object",
                            "properties": {
                                "emotional_state_simulation": {
                                    "type": "object"
                                },
                                "empathic_understanding": {
                                    "type": "object"
                                },
                                "emotional_contagion": {
                                    "type": "object"
                                }
                            }
                        },
                        "spatial_perspective_taking": {
                            "type": "object",
                            "properties": {
                                "spatial_viewpoint_shift": {
                                    "type": "object"
                                },
                                "egocentric_allocentric_transformation": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "social_inference": {
                    "type": "object",
                    "properties": {
                        "personality_inference": {
                            "type": "object",
                            "properties": {
                                "trait_attribution": {
                                    "type": "object"
                                },
                                "personality_consistency_assessment": {
                                    "type": "object"
                                }
                            }
