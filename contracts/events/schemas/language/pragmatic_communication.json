                "social_meaning_extraction": {
                    "type": "object",
                    "properties": {
                        "social_identity_information": {
                            "type": "object"
                        },
                        "social_relationship_information": {
                            "type": "object"
                        },
                        "social_context_information": {
                            "type": "object"
                        }
                    }
