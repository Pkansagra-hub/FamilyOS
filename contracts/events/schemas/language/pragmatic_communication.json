                        "speaker_knowledge_modeling": {
                            "type": "object",
                            "properties": {
                                "knowledge_state_assessment": {
                                    "type": "object"
                                },
                                "common_ground_estimation": {
                                    "type": "object"
                                },
                                "expertise_assessment": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "perspective_taking": {
                    "type": "object",
                    "properties": {
                        "cognitive_perspective_taking": {
                            "type": "object",
