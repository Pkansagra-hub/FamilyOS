                                "surface_representations": {
                                    "type": "object"
                                }
                            }
                        },
                        "scene_semantics": {
                            "type": "object",
                            "properties": {
                                "scene_category": {
                                    "type": "string"
                                },
                                "scene_affordances": {
                                    "type": "array"
                                },
                                "contextual_expectations": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "neural_synchronization": {
            "type": "object",
            "properties": {
                "cortical_synchronization": {
                    "type": "object",
                    "properties": {
                        "visual_cortex_synchrony": {
                            "type": "object",
                            "properties": {
                                "v1_synchronization": {
                                    "type": "object"
                                },
                                "v4_synchronization": {
                                    "type": "object"
                                },
                                "mt_synchronization": {
                                    "type": "object"
                                },
                                "it_synchronization": {
                                    "type": "object"
                                }
                            }
                        },
                        "parietal_cortex_synchrony": {
                            "type": "object",
                            "properties": {
