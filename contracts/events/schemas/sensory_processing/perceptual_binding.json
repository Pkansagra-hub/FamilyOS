                                },
                                "spatiotopic_coordinates": {
                                    "type": "object"
                                },
                                "object_centered_coordinates": {
                                    "type": "object"
                                },
                                "coordinate_transformation_matrix": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "feature_binding": {
                    "type": "object",
                    "properties": {
                        "feature_integration_theory": {
                            "type": "object",
                            "properties": {
                                "attention_spotlight_role": {
                                    "type": "object"
                                },
                                "preattentive_processing": {
                                    "type": "object"
                                },
                                "focused_attention_binding": {
                                    "type": "object"
                                },
                                "illusory_conjunctions_prevention": {
                                    "type": "object"
                                }
                            }
                        },
                        "feature_maps_integration": {
                            "type": "object",
                            "properties": {
                                "color_map_contribution": {
                                    "type": "object"
                                },
                                "motion_map_contribution": {
                                    "type": "object"
                                },
                                "form_map_contribution": {
                                    "type": "object"
                                },
                                "master_map_construction": {
                                    "type": "object"
                                }
                            }
                        },
                        "binding_resolution": {
                            "type": "object",
                            "properties": {
                                "feature_conflict_resolution": {
                                    "type": "object"
                                },
                                "binding_ambiguity_resolution": {
                                    "type": "object"
                                },
                                "competitive_binding_dynamics": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "bound_representations": {
            "type": "object",
            "properties": {
                "object_representations": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "object_id": {
                                "type": "string"
                            },
                            "bound_features": {
                                "type": "object",
                                "properties": {
                                    "color_properties": {
