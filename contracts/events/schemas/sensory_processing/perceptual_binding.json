                                    },
                                    "spatial_binding_confidence": {
                                        "type": "number"
                                    },
                                    "temporal_binding_confidence": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "scene_representations": {
                    "type": "object",
                    "properties": {
                        "object_relationships": {
                            "type": "array",
                            "items": {
