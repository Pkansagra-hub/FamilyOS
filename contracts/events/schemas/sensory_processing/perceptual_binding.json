{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "perceptual_binding.event.json",
    "title": "Perceptual Binding Event",
    "description": "Event schema for perceptual binding and feature integration based on visual cortex, temporal binding mechanisms, and attention-binding interactions",
    "type": "object",
    "required": [
        "event_id",
        "timestamp",
        "feature_inputs",
        "binding_mechanisms",
        "bound_representations",
        "neural_synchronization"
    ],
    "properties": {
        "event_id": {
            "type": "string",
            "description": "Unique identifier for this perceptual binding event"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "feature_inputs": {
            "type": "object",
            "properties": {
                "visual_features": {
                    "type": "object",
                    "properties": {
                        "color_features": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "feature_id": {
                                        "type": "string"
                                    },
                                    "color_value": {
                                        "type": "object"
                                    },
                                    "spatial_location": {
                                        "type": "object"
                                    },
                                    "temporal_dynamics": {
                                        "type": "object"
                                    },
                                    "feature_strength": {
                                        "type": "number"
                                    }
                                }
                            }
                        },
                        "motion_features": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "feature_id": {
                                        "type": "string"
                                    },
                                    "motion_vector": {
                                        "type": "object"
                                    },
                                    "spatial_location": {
                                        "type": "object"
                                    },
                                    "temporal_coherence": {
                                        "type": "number"
                                    },
                                    "motion_strength": {
                                        "type": "number"
                                    }
                                }
                            }
                        },
                        "form_features": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "feature_id": {
                                        "type": "string"
                                    },
                                    "shape_descriptors": {
                                        "type": "object"
                                    },
                                    "orientation_data": {
                                        "type": "object"
                                    },
                                    "spatial_frequency": {
                                        "type": "object"
                                    },
                                    "contour_information": {
                                        "type": "object"
                                    }
                                }
                            }
                        },
                        "depth_features": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "feature_id": {
                                        "type": "string"
                                    },
                                    "depth_value": {
                                        "type": "number"
                                    },
                                    "depth_cues": {
                                        "type": "array"
                                    },
                                    "binocular_disparity": {
                                        "type": "object"
                                    },
                                    "monocular_cues": {
                                        "type": "object"
                                    }
                                }
                            }
                        },
                        "texture_features": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "feature_id": {
                                        "type": "string"
                                    },
                                    "texture_descriptors": {
                                        "type": "object"
                                    },
                                    "spatial_patterns": {
                                        "type": "object"
                                    },
                                    "texture_gradients": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                },
                "auditory_features": {
                    "type": "object",
                    "properties": {
                        "frequency_features": {
                            "type": "array"
                        },
                        "temporal_features": {
                            "type": "array"
                        },
                        "spatial_features": {
                            "type": "array"
                        },
                        "timbre_features": {
                            "type": "array"
                        }
                    }
                },
                "tactile_features": {
                    "type": "object",
                    "properties": {
                        "pressure_features": {
                            "type": "array"
                        },
                        "texture_features": {
                            "type": "array"
                        },
                        "temperature_features": {
                            "type": "array"
                        },
                        "vibration_features": {
                            "type": "array"
                        }
                    }
                }
            }
        },
        "binding_mechanisms": {
            "type": "object",
            "properties": {
                "temporal_binding": {
                    "type": "object",
                    "properties": {
                        "neural_synchronization": {
                            "type": "object",
                            "properties": {
                                "gamma_synchrony": {
                                    "type": "object",
                                    "properties": {
                                        "frequency_range": {
                                            "type": "object"
                                        },
                                        "synchrony_strength": {
                                            "type": "number"
                                        },
                                        "phase_coupling": {
                                            "type": "object"
                                        },
                                        "coherence_networks": {
                                            "type": "array"
                                        }
                                    }
                                },
                                "beta_synchrony": {
                                    "type": "object",
                                    "properties": {
                                        "frequency_range": {
                                            "type": "object"
                                        },
                                        "top_down_modulation": {
                                            "type": "object"
                                        },
                                        "prediction_signals": {
                                            "type": "object"
                                        }
                                    }
                                },
                                "alpha_synchrony": {
                                    "type": "object",
