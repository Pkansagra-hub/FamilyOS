{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Prospective Remind Tick",
  "description": "Occurrence tick for reminders (T-15 / T / T+5).",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "schedule_id": {
      "type": "string"
    },
    "occurrence_id": {
      "type": "string"
    },
    "when": {
      "type": "string",
      "format": "date-time"
    },
    "window": {
      "type": "string",
      "enum": [
        "T-15",
        "T",
        "T+5"
      ]
    },
    "title": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "schedule_id",
    "occurrence_id",
    "when",
    "window"
  ]
}