{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "neural_plasticity.event.json",
    "title": "Neural Plasticity Event",
    "description": "Event schema for neural plasticity mechanisms including synaptic plasticity, structural plasticity, and homeostatic plasticity based on cellular and molecular mechanisms",
    "type": "object",
    "required": [
        "event_id",
        "timestamp",
        "plasticity_context",
        "synaptic_plasticity",
        "structural_plasticity",
        "molecular_mechanisms"
    ],
    "properties": {
        "event_id": {
            "type": "string",
            "description": "Unique identifier for this neural plasticity event"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "plasticity_context": {
            "type": "object",
            "properties": {
                "plasticity_trigger": {
                    "type": "string",
                    "enum": [
                        "learning",
                        "experience",
                        "injury",
                        "development",
                        "aging",
                        "pharmacological"
                    ]
                },
                "temporal_scale": {
                    "type": "string",
                    "enum": [
                        "milliseconds",
                        "seconds",
                        "minutes",
                        "hours",
                        "days",
                        "weeks",
                        "months"
                    ]
                },
                "spatial_scale": {
                    "type": "string",
                    "enum": [
                        "molecular",
                        "synaptic",
                        "dendritic",
                        "cellular",
                        "circuit",
                        "network",
                        "system"
                    ]
                },
                "plasticity_direction": {
                    "type": "string",
                    "enum": [
                        "potentiation",
                        "depression",
                        "bidirectional",
                        "homeostatic"
                    ]
                }
            }
        },
        "synaptic_plasticity": {
            "type": "object",
            "properties": {
                "long_term_potentiation_ltp": {
                    "type": "object",
