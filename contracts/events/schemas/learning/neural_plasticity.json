                                },
                                "ampa_receptor_trafficking": {
                                    "type": "object"
                                },
                                "synaptic_strength_increase": {
                                    "type": "number"
                                }
                            }
                        },
                        "nmda_receptor_independent_ltp": {
                            "type": "object",
                            "properties": {
                                "mglur_dependent_ltp": {
