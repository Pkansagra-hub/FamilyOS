{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://familyos.local/contracts/events/schemas/thalamus/thalamic_relay_admit.schema.json",
    "title": "Thalamic Relay ADMIT Event",
    "description": "Event generated by thalamic relay circuits when admitting cognitive content for processing",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "timestamp",
        "relay_circuit",
        "relay_decision",
        "cognitive_load",
        "salience_score",
        "hysteresis_state",
        "content_id"
    ],
    "properties": {
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Precise timing of thalamic relay decision"
        },
        "relay_circuit": {
            "type": "string",
            "enum": [
                "memory",
                "recall",
                "executive",
                "learning"
            ],
            "description": "Which thalamic relay circuit made the admit decision"
        },
        "relay_decision": {
            "type": "string",
            "const": "ADMIT",
            "description": "Thalamic gating decision - ADMIT for processing"
        },
        "content_id": {
            "type": "string",
            "description": "Unique identifier for content being admitted"
        },
        "cognitive_load": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Current cognitive load (0-1 scale)"
        },
        "salience_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Computed salience importance score"
        },
        "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence in the admission decision"
        },
        "hysteresis_state": {
            "type": "object",
            "required": [
                "previous_decision",
                "stability_count",
                "oscillation_prevention"
            ],
            "properties": {
                "previous_decision": {
                    "type": "string",
                    "enum": [
                        "ADMIT",
                        "DEFER",
                        "BOOST",
                        "DROP",
                        "NONE"
                    ]
                },
                "stability_count": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Number of consecutive similar decisions"
                },
                "oscillation_prevention": {
                    "type": "boolean",
                    "description": "Whether anti-oscillation controls are active"
                }
            },
            "description": "Anti-oscillation hysteresis control state"
        },
        "attention_mechanisms": {
            "type": "object",
            "properties": {
                "spatial_focus": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "description": "Spatial attention coordinates"
                },
                "temporal_window": {
                    "type": "object",
                    "properties": {
                        "start_ms": {
                            "type": "number"
                        },
                        "duration_ms": {
                            "type": "number"
                        },
                        "priority": {
                            "type": "number"
                        }
                    }
                },
                "feature_weights": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "number"
                    },
                    "description": "Feature-based attention weights"
                },
                "object_bindings": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "object_id": {
                                "type": "string"
                            },
                            "binding_strength": {
                                "type": "number"
                            }
                        }
                    }
                }
            },
            "description": "Active attention mechanism states"
        },
        "processing_priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "description": "Processing priority level (1=lowest, 10=highest)"
        },
        "downstream_pipeline": {
            "type": "string",
            "pattern": "^P(0[1-9]|1[0-9]|20)$",
            "description": "Target pipeline for admitted content"
        },
        "admission_reason": {
            "type": "string",
            "enum": [
                "high_salience",
                "urgent_priority",
                "working_memory_request",
                "executive_override",
                "attention_capture"
            ],
            "description": "Reason for admission decision"
        }
    }
}
