{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://familyos.local/contracts/events/schemas/thalamus/thalamic_relay_defer.schema.json",
    "title": "Thalamic Relay DEFER Event",
    "description": "Event generated by thalamic relay circuits when deferring cognitive content for later processing",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "timestamp",
        "relay_circuit",
        "relay_decision",
        "cognitive_load",
        "salience_score",
        "hysteresis_state",
        "content_id",
        "defer_duration_ms"
    ],
    "properties": {
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Precise timing of thalamic relay decision"
        },
        "relay_circuit": {
            "type": "string",
            "enum": [
                "memory",
                "recall",
                "executive",
                "learning"
            ],
            "description": "Which thalamic relay circuit made the defer decision"
        },
        "relay_decision": {
            "type": "string",
            "const": "DEFER",
            "description": "Thalamic gating decision - DEFER for later processing"
        },
        "content_id": {
            "type": "string",
            "description": "Unique identifier for content being deferred"
        },
        "cognitive_load": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Current cognitive load causing deferral"
        },
        "salience_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Computed salience importance score"
        },
        "defer_duration_ms": {
            "type": "integer",
            "minimum": 1,
            "description": "Duration in milliseconds to defer processing"
        },
        "defer_reason": {
            "type": "string",
            "enum": [
                "cognitive_overload",
                "low_salience",
                "resource_contention",
                "working_memory_full",
                "attention_elsewhere"
            ],
            "description": "Reason for deferral decision"
        },
        "hysteresis_state": {
            "type": "object",
            "required": [
                "previous_decision",
                "stability_count",
                "oscillation_prevention"
            ],
            "properties": {
                "previous_decision": {
                    "type": "string",
                    "enum": [
                        "ADMIT",
                        "DEFER",
                        "BOOST",
                        "DROP",
                        "NONE"
                    ]
                },
                "stability_count": {
                    "type": "integer",
                    "minimum": 0
                },
                "oscillation_prevention": {
                    "type": "boolean"
                }
            },
            "description": "Anti-oscillation hysteresis control state"
        },
        "retry_conditions": {
            "type": "object",
            "properties": {
                "cognitive_load_threshold": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "priority_boost_required": {
                    "type": "boolean"
                },
                "specific_attention_state": {
                    "type": "string"
                }
            },
            "description": "Conditions for retry processing"
        },
        "queue_position": {
            "type": "integer",
            "minimum": 1,
            "description": "Position in deferred processing queue"
        }
    }
}
