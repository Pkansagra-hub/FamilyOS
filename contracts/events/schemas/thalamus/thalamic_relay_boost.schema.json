{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://familyos.local/contracts/events/schemas/thalamus/thalamic_relay_boost.schema.json",
    "title": "Thalamic Relay BOOST Event",
    "description": "Event generated by thalamic relay circuits when boosting priority of cognitive content",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "timestamp",
        "relay_circuit",
        "relay_decision",
        "cognitive_load",
        "salience_score",
        "hysteresis_state",
        "content_id",
        "boost_factor"
    ],
    "properties": {
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Precise timing of thalamic relay decision"
        },
        "relay_circuit": {
            "type": "string",
            "enum": [
                "memory",
                "recall",
                "executive",
                "learning"
            ],
            "description": "Which thalamic relay circuit made the boost decision"
        },
        "relay_decision": {
            "type": "string",
            "const": "BOOST",
            "description": "Thalamic gating decision - BOOST priority"
        },
        "content_id": {
            "type": "string",
            "description": "Unique identifier for content being boosted"
        },
        "cognitive_load": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Current cognitive load"
        },
        "salience_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Computed salience importance score"
        },
        "boost_factor": {
            "type": "number",
            "minimum": 1.1,
            "maximum": 10.0,
            "description": "Multiplicative boost factor for priority"
        },
        "boost_reason": {
            "type": "string",
            "enum": [
                "urgent_interrupt",
                "executive_request",
                "attention_capture",
                "safety_critical",
                "deadline_approaching",
                "working_memory_priority"
            ],
            "description": "Reason for priority boost"
        },
        "hysteresis_state": {
            "type": "object",
            "required": [
                "previous_decision",
                "stability_count",
                "oscillation_prevention"
            ],
            "properties": {
                "previous_decision": {
                    "type": "string",
                    "enum": [
                        "ADMIT",
                        "DEFER",
                        "BOOST",
                        "DROP",
                        "NONE"
                    ]
                },
                "stability_count": {
                    "type": "integer",
                    "minimum": 0
                },
                "oscillation_prevention": {
                    "type": "boolean"
                }
            },
            "description": "Anti-oscillation hysteresis control state"
        },
        "boost_duration_ms": {
            "type": "integer",
            "minimum": 1,
            "description": "Duration of priority boost in milliseconds"
        },
        "original_priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "description": "Original priority before boost"
        },
        "boosted_priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "description": "New priority after boost"
        },
        "interrupt_context": {
            "type": "object",
            "properties": {
                "interrupted_process": {
                    "type": "string"
                },
                "interrupt_source": {
                    "type": "string"
                },
                "recovery_strategy": {
                    "type": "string"
                }
            },
            "description": "Context for interrupt-based boosts"
        }
    }
}
