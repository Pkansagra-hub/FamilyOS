{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://familyos.local/contracts/events/schemas/thalamus/thalamic_relay_drop.schema.json",
    "title": "Thalamic Relay DROP Event",
    "description": "Event generated by thalamic relay circuits when dropping/filtering cognitive content",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "timestamp",
        "relay_circuit",
        "relay_decision",
        "cognitive_load",
        "salience_score",
        "hysteresis_state",
        "content_id",
        "drop_reason"
    ],
    "properties": {
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Precise timing of thalamic relay decision"
        },
        "relay_circuit": {
            "type": "string",
            "enum": [
                "memory",
                "recall",
                "executive",
                "learning"
            ],
            "description": "Which thalamic relay circuit made the drop decision"
        },
        "relay_decision": {
            "type": "string",
            "const": "DROP",
            "description": "Thalamic gating decision - DROP/filter content"
        },
        "content_id": {
            "type": "string",
            "description": "Unique identifier for content being dropped"
        },
        "cognitive_load": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Current cognitive load"
        },
        "salience_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Computed salience importance score (typically low)"
        },
        "drop_reason": {
            "type": "string",
            "enum": [
                "low_salience",
                "resource_protection",
                "noise_filtering",
                "redundant_content",
                "policy_violation",
                "cognitive_overload_protection",
                "attention_filter"
            ],
            "description": "Reason for dropping content"
        },
        "hysteresis_state": {
            "type": "object",
            "required": [
                "previous_decision",
                "stability_count",
                "oscillation_prevention"
            ],
            "properties": {
                "previous_decision": {
                    "type": "string",
                    "enum": [
                        "ADMIT",
                        "DEFER",
                        "BOOST",
                        "DROP",
                        "NONE"
                    ]
                },
                "stability_count": {
                    "type": "integer",
                    "minimum": 0
                },
                "oscillation_prevention": {
                    "type": "boolean"
                }
            },
            "description": "Anti-oscillation hysteresis control state"
        },
        "filter_criteria": {
            "type": "object",
            "properties": {
                "salience_threshold": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "content_type_filter": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "source_filter": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "temporal_filter": {
                    "type": "object"
                }
            },
            "description": "Criteria used for filtering decision"
        },
        "protection_metrics": {
            "type": "object",
            "properties": {
                "cognitive_load_reduction": {
                    "type": "number",
                    "description": "Reduction in cognitive load from dropping"
                },
                "resource_savings": {
                    "type": "object",
                    "properties": {
                        "memory_saved_bytes": {
                            "type": "integer"
                        },
                        "processing_time_saved_ms": {
                            "type": "number"
                        },
                        "attention_units_saved": {
                            "type": "number"
                        }
                    }
                }
            },
            "description": "Metrics showing protection benefits"
        },
        "alternative_routing": {
            "type": "object",
            "properties": {
                "archive_location": {
                    "type": "string"
                },
                "low_priority_queue": {
                    "type": "boolean"
                },
                "background_processing": {
                    "type": "boolean"
                }
            },
            "description": "Alternative handling for dropped content"
        }
    }
}
