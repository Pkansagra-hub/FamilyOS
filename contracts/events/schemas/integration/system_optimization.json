{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "system_optimization.event.json",
    "title": "System-Wide Optimization Event",
    "description": "Event schema for system-wide cognitive optimization including adaptive tuning, efficiency improvements, and meta-learning across all cognitive modules",
    "type": "object",
    "required": [
        "event_id",
        "timestamp",
        "optimization_context",
        "optimization_strategies",
        "performance_optimization",
        "meta_cognitive_optimization"
    ],
    "properties": {
        "event_id": {
            "type": "string",
            "description": "Unique identifier for this system optimization event"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "optimization_context": {
            "type": "object",
            "properties": {
                "optimization_trigger": {
                    "type": "string",
                    "enum": [
                        "performance_degradation",
                        "efficiency_improvement",
                        "new_task_demands",
                        "resource_constraints",
                        "learning_opportunity",
                        "system_maintenance"
                    ]
                },
                "optimization_scope": {
                    "type": "string",
                    "enum": [
                        "single_module",
                        "multi_module",
                        "network_level",
                        "system_wide",
                        "global"
                    ]
                },
                "current_performance_metrics": {
                    "type": "object",
                    "properties": {
                        "overall_efficiency": {
                            "type": "number"
                        },
                        "processing_speed": {
                            "type": "number"
                        },
                        "accuracy_levels": {
                            "type": "object"
                        },
                        "resource_utilization": {
                            "type": "object"
                        }
                    }
                },
                "optimization_targets": {
                    "type": "object",
                    "properties": {
                        "performance_targets": {
                            "type": "object"
                        },
                        "efficiency_targets": {
                            "type": "object"
                        },
                        "resource_targets": {
                            "type": "object"
                        },
                        "adaptation_targets": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "optimization_strategies": {
            "type": "object",
            "properties": {
                "parameter_optimization": {
                    "type": "object",
                    "properties": {
                        "neural_parameter_tuning": {
                            "type": "object",
                            "properties": {
                                "synaptic_weight_optimization": {
                                    "type": "object"
                                },
                                "threshold_optimization": {
                                    "type": "object"
                                },
                                "connectivity_pattern_optimization": {
                                    "type": "object"
                                }
                            }
                        },
                        "network_parameter_tuning": {
                            "type": "object",
                            "properties": {
                                "learning_rate_optimization": {
                                    "type": "object"
                                },
                                "activation_function_optimization": {
                                    "type": "object"
                                },
                                "regularization_parameter_tuning": {
                                    "type": "object"
                                }
                            }
                        },
                        "system_parameter_tuning": {
                            "type": "object",
                            "properties": {
                                "attention_allocation_parameters": {
                                    "type": "object"
                                },
                                "memory_allocation_parameters": {
                                    "type": "object"
                                },
                                "executive_control_parameters": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "architectural_optimization": {
                    "type": "object",
                    "properties": {
                        "network_topology_optimization": {
                            "type": "object",
                            "properties": {
                                "connection_pruning": {
                                    "type": "object"
                                },
                                "connection_strengthening": {
                                    "type": "object"
