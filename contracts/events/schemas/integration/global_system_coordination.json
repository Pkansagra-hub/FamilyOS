                                    "type": "object"
                                },
                                "motor_execution_coordination": {
                                    "type": "object"
                                },
                                "sensorimotor_integration_coordination": {
                                    "type": "object"
                                }
                            }
                        },
                        "language_system_coordination": {
                            "type": "object",
                            "properties": {
                                "comprehension_production_coordination": {
                                    "type": "object"
                                },
                                "language_attention_coordination": {
                                    "type": "object"
                                },
                                "discourse_processing_coordination": {
                                    "type": "object"
                                }
                            }
                        },
                        "learning_system_coordination": {
                            "type": "object",
                            "properties": {
                                "learning_consolidation_coordination": {
                                    "type": "object"
                                },
                                "plasticity_coordination": {
