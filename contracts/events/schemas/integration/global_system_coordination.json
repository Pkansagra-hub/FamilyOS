                    "properties": {
                        "conscious_access_coordination": {
                            "type": "object",
                            "properties": {
                                "workspace_content_selection": {
                                    "type": "object"
                                },
                                "global_broadcasting": {
                                    "type": "object"
                                },
                                "conscious_integration": {
                                    "type": "object"
                                }
                            }
                        },
                        "coalition_competition": {
                            "type": "object",
                            "properties": {
                                "neural_coalition_formation": {
                                    "type": "object"
                                },
                                "competition_dynamics": {
                                    "type": "object"
                                },
                                "winner_take_all_mechanisms": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "resource_allocation": {
            "type": "object",
