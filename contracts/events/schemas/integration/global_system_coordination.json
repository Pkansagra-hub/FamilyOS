                    "type": "object",
                    "properties": {
                        "information_flow_coordination": {
                            "type": "object",
                            "properties": {
                                "bottom_up_integration": {
                                    "type": "object"
                                },
                                "top_down_modulation": {
                                    "type": "object"
                                },
                                "lateral_communication": {
                                    "type": "object"
                                }
                            }
                        },
                        "temporal_coordination": {
                            "type": "object",
                            "properties": {
                                "synchronized_processing": {
                                    "type": "object"
                                },
                                "sequential_processing_coordination": {
                                    "type": "object"
                                },
                                "parallel_processing_coordination": {
                                    "type": "object"
                                }
                            }
                        },
                        "conflict_resolution": {
                            "type": "object",
                            "properties": {
                                "resource_conflict_resolution": {
                                    "type": "object"
