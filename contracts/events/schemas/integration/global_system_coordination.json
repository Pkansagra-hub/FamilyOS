                        "long_term_memory_allocation": {
                            "type": "object",
                            "properties": {
                                "encoding_resource_allocation": {
                                    "type": "object"
                                },
                                "retrieval_resource_allocation": {
                                    "type": "object"
                                },
                                "consolidation_resource_allocation": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "neural_coordination_networks": {
            "type": "object",
            "properties": {
                "thalamic_coordination": {
                    "type": "object",
                    "properties": {
                        "mediodorsal_nucleus_activity": {
