{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "global_system_coordination.event.json",
    "title": "Global System Coordination Event",
    "description": "Event schema for global cognitive system coordination based on thalamic nuclei, prefrontal networks, and global workspace mechanisms",
    "type": "object",
    "required": [
        "event_id",
        "timestamp",
        "coordination_context",
        "system_orchestration",
        "resource_allocation",
        "neural_coordination_networks"
    ],
    "properties": {
        "event_id": {
            "type": "string",
            "description": "Unique identifier for this global coordination event"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "coordination_context": {
            "type": "object",
            "properties": {
                "coordination_trigger": {
                    "type": "string",
                    "enum": [
                        "task_switch",
                        "conflict_resolution",
                        "resource_competition",
                        "goal_change",
                        "environmental_change",
                        "system_optimization"
                    ]
                },
                "system_state": {
                    "type": "object",
                    "properties": {
                        "cognitive_load": {
                            "type": "number"
                        },
                        "arousal_level": {
                            "type": "number"
                        },
                        "attention_demands": {
                            "type": "object"
                        },
                        "competing_processes": {
                            "type": "array"
                        }
                    }
                },
                "coordination_scope": {
                    "type": "string",
                    "enum": [
                        "local",
                        "regional",
                        "global",
                        "system_wide"
                    ]
                },
                "urgency_level": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            }
        },
        "system_orchestration": {
            "type": "object",
            "properties": {
                "subsystem_coordination": {
                    "type": "object",
                    "properties": {
                        "attention_system_coordination": {
                            "type": "object",
                            "properties": {
                                "attention_allocation_priorities": {
                                    "type": "object"
                                },
                                "attention_switching_coordination": {
                                    "type": "object"
                                },
                                "attention_resource_sharing": {
                                    "type": "object"
                                }
                            }
                        },
                        "memory_system_coordination": {
                            "type": "object",
                            "properties": {
                                "encoding_retrieval_coordination": {
                                    "type": "object"
                                },
                                "memory_system_integration": {
                                    "type": "object"
                                },
                                "consolidation_coordination": {
                                    "type": "object"
                                }
                            }
                        },
                        "executive_control_coordination": {
                            "type": "object",
                            "properties": {
                                "goal_management_coordination": {
                                    "type": "object"
                                },
                                "cognitive_control_allocation": {
                                    "type": "object"
                                },
                                "inhibitory_control_coordination": {
                                    "type": "object"
                                }
                            }
