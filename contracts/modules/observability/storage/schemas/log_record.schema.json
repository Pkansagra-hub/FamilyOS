{
  "$id": "https://familyos/contracts/observability/log_record.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["log_id","ts","level","message","space_id","band","request_id"],
  "properties": {
    "log_id": {"type":"string","format":"uuid"},
    "ts": {"type":"string","format":"date-time"},
    "level": {"type":"string","enum":["DEBUG","INFO","WARN","ERROR"]},
    "message": {"type":"string","maxLength": 4096},
    "fields": {"type":"object","additionalProperties": true},
    "request_id": {"type":"string"},
    "trace_id": {"type":"string"},
    "span_id": {"type":"string"},
    "event_id": {"type":"string"},
    "space_id": {"type":"string"},
    "band": {"type":"string","enum":["GREEN","AMBER","RED","BLACK"]},
    "mls_group": {"type":"string"}
  }
}
