{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MemoryRecallResponse",
  "description": "Response schema for memory recall operations",
  "type": "object",
  "required": ["memories", "query_info", "metadata"],
  "properties": {
    "memories": {
      "type": "array",
      "description": "Retrieved memories matching the query",
      "items": {
        "type": "object",
        "required": ["memory_id", "content", "relevance_score"],
        "properties": {
          "memory_id": {
            "type": "string",
            "pattern": "^mem_[a-zA-Z0-9]{24}$"
          },
          "content": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string",
                "description": "Memory content (may be redacted based on privacy settings)"
              },
              "summary": {
                "type": "string",
                "description": "AI-generated summary of the memory"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "content_type": {
                "type": "string",
                "enum": ["conversation", "observation", "instruction", "reflection", "goal"]
              }
            }
          },
          "context": {
            "type": "object",
            "description": "Contextual information about the memory",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "participants": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "location": {
                "type": "string"
              },
              "emotional_context": {
                "type": "object",
                "properties": {
                  "valence": {
                    "type": "number"
                  },
                  "arousal": {
                    "type": "number"
                  },
                  "dominant_emotion": {
                    "type": "string"
                  }
                }
              },
              "family_context": {
                "type": "object",
                "properties": {
                  "relationship_type": {
                    "type": "string"
                  },
                  "family_event": {
                    "type": "boolean"
                  }
                }
              }
            }
          },
          "relevance_score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Relevance score for this memory to the query"
          },
          "importance_score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Overall importance score of this memory"
          },
          "privacy_level": {
            "type": "string",
            "enum": ["GREEN", "AMBER", "RED", "BLACK"],
            "description": "Privacy classification of this memory"
          },
          "space_id": {
            "type": "string",
            "description": "Memory space where this memory is stored"
          },
          "related_memories": {
            "type": "array",
            "description": "IDs of related memories",
            "items": {
              "type": "object",
              "properties": {
                "memory_id": {
                  "type": "string"
                },
                "relationship_type": {
                  "type": "string",
                  "enum": ["temporal", "causal", "thematic", "emotional", "family"]
                },
                "strength": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    "query_info": {
      "type": "object",
      "description": "Information about the query execution",
      "properties": {
        "query_understanding": {
          "type": "object",
          "description": "AI's interpretation of the query",
          "properties": {
            "intent": {
              "type": "string",
              "enum": ["find_specific", "explore_topic", "timeline_search", "emotional_context", "family_coordination"]
            },
            "key_concepts": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "temporal_focus": {
              "type": "string",
              "enum": ["recent", "historical", "specific_time", "ongoing"]
            }
          }
        },
        "search_execution": {
          "type": "object",
          "description": "Details about how the search was executed",
          "properties": {
            "search_strategy": {
              "type": "string",
              "enum": ["semantic_similarity", "episodic_retrieval", "temporal_scan", "family_coordination"]
            },
            "spaces_searched": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "total_candidates": {
              "type": "integer",
              "description": "Total memories considered"
            },
            "filtered_results": {
              "type": "integer",
              "description": "Results after filtering"
            }
          }
        },
        "cognitive_insights": {
          "type": "object",
          "description": "Cognitive analysis of the query and results",
          "properties": {
            "memory_patterns": {
              "type": "array",
              "description": "Patterns detected in the retrieved memories",
              "items": {
                "type": "object",
                "properties": {
                  "pattern_type": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "confidence": {
                    "type": "number"
                  }
                }
              }
            },
            "family_dynamics": {
              "type": "object",
              "description": "Insights about family patterns and dynamics",
              "properties": {
                "relationship_insights": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "coordination_opportunities": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Response metadata",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "query_duration_ms": {
          "type": "integer"
        },
        "total_results": {
          "type": "integer"
        },
        "api_version": {
          "type": "string"
        },
        "request_id": {
          "type": "string"
        }
      }
    }
  }
}
