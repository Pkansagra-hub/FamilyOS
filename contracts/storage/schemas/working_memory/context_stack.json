{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "context_stack.schema.json",
    "title": "Working Memory Context Stack Storage",
    "type": "object",
    "required": [
        "stack_id",
        "current_context",
        "context_history",
        "stack_depth"
    ],
    "properties": {
        "stack_id": {
            "type": "string"
        },
        "current_context": {
            "type": "object"
        },
        "context_history": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "stack_depth": {
            "type": "integer",
            "minimum": 0
        },
        "max_depth": {
            "type": "integer",
            "minimum": 1
        }
    }
}
