{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://memoryos/contracts/storage/index_health.schema.json",
  "title": "Index Health",
  "description": "Health status and metrics for a search index",
  "type": "object",
  "required": ["index_name", "space_id", "status", "checked_at"],
  "properties": {
    "index_name": {
      "type": "string",
      "pattern": "^[A-Za-z0-9._:-]{2,64}$",
      "description": "Index name"
    },
    "space_id": {
      "type": "string",
      "description": "Space scope (e.g., 'shared:household')"
    },
    "status": {
      "type": "string",
      "enum": ["HEALTHY", "DEGRADED", "UNHEALTHY", "UNKNOWN"],
      "description": "Overall health status"
    },
    "checked_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of health check"
    },
    "reasons": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Reasons for non-healthy status"
    },
    "metrics": {
      "type": "object",
      "description": "Health-related metrics snapshot",
      "properties": {
        "size_mb": {"type": "number", "minimum": 0},
        "document_count": {"type": "integer", "minimum": 0},
        "last_updated": {"type": "string", "format": "date-time"},
        "refresh_latency_ms": {"type": "number", "minimum": 0},
        "error_rate": {"type": "number", "minimum": 0, "maximum": 1},
        "rebuild_in_progress": {"type": "boolean"}
      },
      "additionalProperties": true
    },
    "thresholds": {
      "type": "object",
      "description": "Configured thresholds for evaluating health",
      "properties": {
        "max_size_mb": {"type": "number", "minimum": 1},
        "max_refresh_latency_ms": {"type": "number", "minimum": 1},
        "max_error_rate": {"type": "number", "minimum": 0, "maximum": 1},
        "max_stale_minutes": {"type": "number", "minimum": 1}
      }
    }
  }
}
