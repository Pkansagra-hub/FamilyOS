{
  "$id": "https://familyos/contracts/observability/metric_point.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name","ts","type","value","labels","space_id","band"],
  "properties": {
    "name": {"type":"string","pattern":"^[a-z_][a-z0-9_]*$"},
    "ts": {"type":"string","format":"date-time"},
    "type": {"type":"string","enum":["counter","gauge","histogram"]},
    "value": {"type":["number","object"]},
    "labels": {"type":"object","additionalProperties":{"type":"string"}},
    "space_id": {"type":"string"},
    "band": {"type":"string","enum":["GREEN","AMBER","RED","BLACK"]}
  }
}
