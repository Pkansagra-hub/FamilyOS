{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://familyos.local/contracts/storage/user_space_assignment.schema.json",
    "title": "User Space Assignment",
    "description": "Storage schema for user access assignments to memory spaces",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "assignment_id",
        "user_id",
        "space_id",
        "permissions",
        "assigned_ts"
    ],
    "properties": {
        "assignment_id": {
            "$ref": "./common.schema.json#/$defs/ULID",
            "description": "Unique assignment identifier"
        },
        "user_id": {
            "$ref": "./common.schema.json#/$defs/UUID",
            "description": "User being granted access"
        },
        "space_id": {
            "$ref": "./common.schema.json#/$defs/SpaceId",
            "description": "Memory space being accessed"
        },
        "permissions": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "READ",
                    "WRITE",
                    "SHARE",
                    "ADMIN"
                ]
            },
            "minItems": 1,
            "uniqueItems": true,
            "description": "Permissions granted in this space"
        },
        "role_context": {
            "type": "string",
            "enum": [
                "guardian",
                "member",
                "child",
                "guest"
            ],
            "description": "Role context for this space assignment"
        },
        "restrictions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "time_limited": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether this assignment has time limits"
                },
                "valid_from": {
                    "$ref": "./common.schema.json#/$defs/Timestamp",
                    "description": "Assignment becomes valid from this time"
                },
                "valid_until": {
                    "$ref": "./common.schema.json#/$defs/Timestamp",
                    "description": "Assignment expires at this time"
                },
                "max_operations_per_day": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Maximum operations allowed per day"
                },
                "allowed_bands": {
                    "type": "array",
                    "items": {
                        "$ref": "./common.schema.json#/$defs/Band"
                    },
                    "description": "Security bands this user can access in this space"
                },
                "device_restrictions": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "ios",
                            "android",
                            "macos",
                            "windows",
                            "linux",
                            "web",
                            "edge"
                        ]
                    },
                    "description": "Device platforms restricted for this assignment"
                }
            },
            "description": "Optional restrictions on this space assignment"
        },
        "assigned_ts": {
            "$ref": "./common.schema.json#/$defs/Timestamp",
            "description": "When this assignment was created"
        },
        "assigned_by": {
            "$ref": "./common.schema.json#/$defs/UUID",
            "description": "Admin user who created this assignment"
        },
        "last_accessed_ts": {
            "$ref": "./common.schema.json#/$defs/Timestamp",
            "description": "Last time user accessed this space"
        },
        "access_count": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Number of times user has accessed this space"
        },
        "revoked": {
            "type": "boolean",
            "default": false,
            "description": "Whether this assignment has been revoked"
        },
        "revoked_ts": {
            "$ref": "./common.schema.json#/$defs/Timestamp",
            "description": "When this assignment was revoked"
        },
        "revoked_by": {
            "$ref": "./common.schema.json#/$defs/UUID",
            "description": "Admin user who revoked this assignment"
        },
        "revocation_reason": {
            "type": "string",
            "maxLength": 500,
            "description": "Reason for revoking this assignment"
        }
    }
}
