# =============================================================================
# FAMILYOS ENVIRONMENT CONFIGURATION
# =============================================================================
# Complete configuration for all FamilyOS services and environments
# Environment-specific overrides for testing, development, and production

# =============================================================================
# ENVIRONMENT & DEPLOYMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true
FAMILYOS_VERSION=0.1.0

# =============================================================================
# SECURITY MIDDLEWARE CONFIGURATION
# =============================================================================
# Production: Strict security with aggressive rate limiting
# Testing: Relaxed security for load testing and development
# Development: Balanced security for normal development work

# Security Mode (true=production strict, false=testing relaxed)
SECURITY_STRICT_MODE=false

# Rate Limiting (requests per time window)
# Production defaults: 25/30s, 50/min, 150/5min, 20 auto-detect
# Testing recommended: 1000/30s, 2000/min, 5000/5min, 500 auto-detect
SECURITY_RATE_LIMIT_30SEC=1000
SECURITY_RATE_LIMIT_MINUTE=2000
SECURITY_RATE_LIMIT_5MIN=5000
SECURITY_AUTO_DETECT_THRESHOLD=500

# Production Security Settings (uncomment for production deployment)
# SECURITY_STRICT_MODE=true
# SECURITY_RATE_LIMIT_30SEC=25
# SECURITY_RATE_LIMIT_MINUTE=50
# SECURITY_RATE_LIMIT_5MIN=150
# SECURITY_AUTO_DETECT_THRESHOLD=20

# =============================================================================
# OBSERVABILITY INTEGRATION (Existing System)
# =============================================================================
# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9091
PROMETHEUS_URL=http://localhost:9090

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_CORRELATION_ENABLED=true

# Tracing Configuration
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Multi-Worker Server
WORKER_COUNT=4
AGENTS_PLANE_PORT=8080
APP_PLANE_PORT=8081
CONTROL_PLANE_PORT=8082

# Performance Tuning
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=5
REQUEST_TIMEOUT=30

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Mobile Agent Simulation
MOBILE_SIMULATION_ENABLED=true
MOBILE_SIMULATION_USERS=30
MOBILE_SIMULATION_DURATION=300
MOBILE_SIMULATION_TYPING_DELAY=0.1
MOBILE_SIMULATION_THINK_TIME=2.0

# Load Testing
LOAD_TEST_ENABLED=true
LOAD_TEST_TARGET_RPS=100
LOAD_TEST_DURATION=60
LOAD_TEST_CONCURRENT_USERS=50
